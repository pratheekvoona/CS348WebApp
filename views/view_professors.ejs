<%- include("partials/header"); -%>
    <div class="table-wrapper">
        <% if (professors.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Professor Id</th>
												<th scope="col">First Name</th>
												<th scope="col">Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    <% professors.forEach((professor, index) => { %>
                        <tr>
                            <th scope="row"><%= professor.professor_id %></th>
														<td><%= professor.first_name %></td>
														<td><%= professor.last_name %></td>
                            <td>
                                <a href="/editProfessor/<%= professor.professor_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deleteProfessor/<%= professor.professor_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No Professors found. Go <a href="/addProfessor" >here</a> to add Professors.</p>
        <% } %>
    </div>
</div>
</body>
</html>