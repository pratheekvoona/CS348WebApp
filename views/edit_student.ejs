<%- include ('partials/header.ejs'); -%>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (student) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="puid">puid</label>
                    <input type="text" class="form-control" name="puid" id="puid" value="<%= student.puid %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="student_name">student_name</label>
                    <input type="text" class="form-control" name="student_name" id="student_name" value="<%= student.student_name %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Student</button>
        </form>
    <% } else { %>
        <p class="text-center">Student Not Found. Go <a href="/add">here</a> to add students..</p>
    <% } %>
</div>
</div>
</body>
</html>