<%- include("partials/header"); -%>
    <div class="table-wrapper">
        <% if (studies.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        
                        <th scope="col">Class No</th>
                                                <th scope="col">Link to resource</th>
                                                
                    </tr>
                </thead>
                <tbody>
                    <% studies.forEach((study_len, index) => { %>
                        <tr>
                            <th scope="row"><%= study_len.class_no %></th>
                            
                                                        <td><%= study_len.study_link %></td>
                                                        
                            <td>
                                <a href="/editStudy/<%= study_len.study_link %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deleteStudy/<%= study_len.study_link %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

        <% } else { %>
            <p class="text-center">No Resources found. Go <a href="/addStudy" >here</a> to add Resources.</p>
        <% } %>
    </div>
</div>
</body>
</html>